@model IEnumerable<MovieCat_HTML2.Models.KatalogListV>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

    <form method="get" >

    <input type="search" name="searchTerm" />
<input type ="submit" value="Search"  />
        <style>
            input[type="submit"] {
               
               
                border-color: #ffffff;
                color: #714ffa;
                background: transparent;
                border-color:#ffffff;
                border-style: solid;
                }
        </style>
</form>


    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealeseDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genere)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealeseDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })

                </td>
            </tr>
        }

    </table>
